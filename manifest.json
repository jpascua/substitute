{
    "name": "Substitute",
    "description": "Replaces a word with another.",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["activeTab", "storage", "tabs"],
    "browser_action": {
        "default_popup": "frontend/popup.html",
        "default_icon": "images/hello_extensions.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["backend/replace.js"]
    }]
}
